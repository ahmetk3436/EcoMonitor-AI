# ============================================
# Phase 0 Master Template - Environment Variables
# ============================================
# Copy this file to .env and fill in the values.

# --- Database ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=changeme_strong_password
DB_NAME=app_db
DB_SSLMODE=disable

# --- JWT ---
JWT_SECRET=changeme_minimum_32_characters_long_random_string
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# --- Server ---
PORT=8080
CORS_ORIGINS=http://localhost:8081

# --- RevenueCat ---
REVENUECAT_WEBHOOK_AUTH=Bearer your_revenuecat_webhook_auth_secret

# --- Coolify Deployment ---
COOLIFY_URL=https://your-coolify-instance.com
COOLIFY_TOKEN=your_coolify_api_token
APP_UUID=your_application_uuid_from_coolify

# --- Orchestrator: Engine Agent (DeepSeek-V3 / GLM-4) ---
ENGINE_API_KEY=your_deepseek_or_glm_api_key
ENGINE_API_URL=https://api.deepseek.com/v1/chat/completions
ENGINE_MODEL=deepseek-chat

# --- Orchestrator: Debugger Agent ---
DEBUGGER_API_KEY=your_deepseek_api_key
DEBUGGER_API_URL=https://api.deepseek.com/v1/chat/completions
DEBUGGER_MODEL=deepseek-chat

# --- Orchestrator: Project ---
PROJECT_ROOT=..
TASK_FILE=../task_list.json

# --- Mobile ---
EXPO_PUBLIC_API_URL=http://localhost:8080/api
